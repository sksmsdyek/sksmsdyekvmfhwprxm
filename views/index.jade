        section#portfolio
            .container
                .row
                    .col-lg-12.text-center
                        h2 Hosting List
                        |                     
                        hr.star-primary
                |             
                .row
                    each host in hosts
                        .col-sm-4.portfolio-item
                            a.portfolio-link(href='/host/#{host.id}/detail', data-toggle='modal')
                                .caption
                                    .caption-content
                                        i.fa.fa-search-plus.fa-3x
                                |                         
                                img.img-responsive(src='#{host.picturePath}', alt = 'picture')           

